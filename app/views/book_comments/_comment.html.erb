
    <tbody>
     <% book.book_comments.each do |book_comment| %>
         <% book_comment_user = book_comment.user%>
        <tr>
            <td>
              <%= link_to user_path(book_comment_user), class: "user_#{book_comment_user.id}" do %>
                <%= image_tag book_comment.user.get_profile_image,size: "100x100" %><br>
                <%= book_comment.user.name %>
              <% end %>
            </td>
            <td><%= book_comment.comment %></td>
            <td>
                <% if book_comment_user == current_user %>
                    <%= link_to "Destroy" , book_book_comment_path(book_comment.book_id, book_comment.id),remote: true, method: :delete, class: "btn btn-danger pull-right" %>
                <% end %>
            </td>
        </tr>
        <% end %>
    </tbody>