<h2>Results index</h2>

<table class="table table-hover table-inverse">
  <!--検索対象モデルがUserの時 -->
  <% if @range == "user" %>
    
    <%= render "users/index", users: @users %>
    
  <% else %>
    <!--検索対象モデルがUserではない時(= 検索対象モデルがBookの時) -->
    <tbody>
  <%= render "books/index", books: @books %>
    </tbody>
  <% end %>
</table>